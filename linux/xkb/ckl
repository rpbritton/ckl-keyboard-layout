partial modifier_keys
xkb_symbols "modifier" {
    key.type[Group1] = "ONE_LEVEL";

    // Left column
    key <AE01> { [ Escape ] };
    key <TAB> { [ Control_L ] };
    modifier_map Control { <TAB> };
    key <CAPS> { [ Super_L ] };
    modifier_map Mod4 { <CAPS> };
    key <LCTL> { [ Super_L ] };
    modifier_map Mod4 { <LCTL> };

    // Bottom row
    key <AB03> { symbols[Group1]=[ VoidSymbol ],
                 actions[Group1]=[ SetMods(mods=LevelFive) ] };
    include "level5(modifier_mapping)"
    key <AB04> { [ Shift_L ] };
    modifier_map Shift { <AB04> };
    key <AB05> { [ Alt_L ] };
    modifier_map Mod1 { <AB05> };
    key <AB06> { [ Tab ] };
    key <AB07> { [ space ] };
    key <AB08> { symbols[Group1]=[ VoidSymbol ],
                 actions[Group1]=[ SetMods(mods=LevelThree) ] };
    include "level3(modifier_mapping)"

    // Right column
    key <AE12> { [ Delete ] };
    key <AD12> { [ BackSpace ] };
    key <RTRN> { [ Return ] };
};