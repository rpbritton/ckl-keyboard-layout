// CKL Keyboard Layout by Ryan Britton
// https://github.com/rpbritton/ckl-keyboard-layout

default partial
xkb_symbols "full" {
    include "ckl(base)"
    include "ckl(navigation)"
    include "ckl(symbol)"
    include "ckl(function)"
    include "ckl(modifier)"
};

partial alphanumeric_keys
xkb_symbols "base" {
    name[Group1]= "English (CKL)";
    key.type[Group1] = "TWO_LEVEL";

    // Top row
    key <AE02> { [ q, Q ] };
    key <AE03> { [ w, W ] };
    key <AE04> { [ l, L ] };
    key <AE05> { [ d, D ] };
    key <AE06> { [ p, P ] };

    key <AE07> { [ k, K ] };
    key <AE08> { [ m, M ] };
    key <AE09> { [ u, U ] };
    key <AE10> { [ y, Y ] };
    key <AE11> { [ apostrophe, quotedbl ] };

    // Middle row
    key <AD01> { [ a, A ] };
    key <AD02> { [ s, S ] };
    key <AD03> { [ r, R ] };
    key <AD04> { [ t, T ] };
    key <AD05> { [ g, G ] };

    key <AD07> { [ f, F ] };
    key <AD08> { [ n, N ] };
    key <AD09> { [ e, E ] };
    key <AD10> { [ i, I ] };
    key <AD11> { [ o, O ] };

    // Bottom row
    key <AC01> { [ z, Z ] };
    key <AC02> { [ x, X ] };
    key <AC03> { [ c, C ] };
    key <AC04> { [ v, V ] };
    key <AC05> { [ j, J ] };

    key <AC07> { [ b, B ] };
    key <AC08> { [ h, H ] };
    key <AC09> { [ comma, question ] };
    key <AC10> { [ period, exclam ] };
    key <AC11> { [ semicolon, colon ] };
};

